{
  "name": "docs-writer",
  "description": "File access and persistent memory for documentation writing",
  "servers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/tmp"]
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"]
    }
  },
  "agent_defaults": {
    "docs-writer": {
      "allow": ["read_file", "write_file", "list_directory", "create_entities", "search_nodes", "read_graph"]
    }
  }
}
